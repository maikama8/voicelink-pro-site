# Server
PORT=3000

# SMTP (email sending)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_FROM="Voicelink Pro <no-reply@example.com>"
CONTACT_TO_EMAIL=you@example.com

# MagnusBilling
# Public portal URL to link users to (shown in Billing page)
MB_PORTAL_URL=https://billing.example.com

# MagnusBilling API (change base URL here if it ever changes)
MB_API_BASE_URL=http://192.99.144.167/mbilling
# Provide either MB_API_TOKEN or MB_API_KEY/MB_API_SECRET depending on your MB setup
MB_API_TOKEN=
MB_API_KEY=
MB_API_SECRET=

# Auth endpoints (configure to match your MagnusBilling API paths)
MB_AUTH_LOGIN_PATH=/api/auth/login
MB_AUTH_SIGNUP_PATH=/api/auth/signup
MB_AUTH_PROFILE_PATH=/api/auth/me

# Session
SESSION_SECRET=change-me

# Live Chat - choose ONE provider (Crisp OR Tawk). If both are true, Crisp takes precedence.
# Legacy toggle (kept for backward compatibility, maps to Crisp):
LIVECHAT_ENABLED=false

# Crisp
LIVECHAT_CRISP_ENABLED=false
LIVECHAT_CRISP_WEBSITE_ID=

# Tawk.to
LIVECHAT_TAWK_ENABLED=false
LIVECHAT_TAWK_PROPERTY_ID=
LIVECHAT_TAWK_WIDGET_ID=
